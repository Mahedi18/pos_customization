<odoo>
	<record id="pos_config_form_view" model="ir.ui.view">
		<field name="name">POS Config Form View</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@id='iface_big_scrollbars']" position="after">

	            <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="choose_shortcuts"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="choose_shortcuts"/>
                                <div class="text-muted">
                                    Choose shortcut for the POS Session
                                </div>
                                <div class="content-group mt16" >
                                    <field name="iface_choose_shortcuts_id"/>
                                </div>
                            </div>
                </div>

			</xpath>
		</field>

	</record>
</odoo>
